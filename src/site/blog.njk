---
layout: default
meta_title: Blog
meta_description: Blog page description
body_class: blog
title: The Blog
---

<main class="flex flex-1 flex-col md:flex-row py-10 px-6 lg:px-0 lg:py-20 bg-purple-900">
  <section class="flex-1 container ml-auto mr-auto">

    <h1 class="text-white text-3xl md:text-center md:text-5xl mb-16 lg:mb-24 lg:text-6xl">{{ title }}</h1>

    <div class="md:flex flex-1">

      {% for post in collections.blog %}
      <article class="mb-8 mx-4 flex-1 bg-white rounded-lg overflow-hidden">

        {# featured post image & category #}
        {% if post.data.featured_image %}
        <a class="block relative overflow-hidden" href="{{ post.url }}">
          {# category links #}
          <ul class="absolute bottom-0 left-0 flex p-8 z-10">
            {% for item in post.data.tags %}
              {%- if item != "blog" -%}
              <li class="mr-2">
                <span class="inline-block bg-red-500 px-4 py-2 text-white text-xs font-bold rounded">{{ item | capitalize }}</span>
              </li>
              {%- endif -%}
            {% endfor %}
          </ul>

          <figure>
            <img src="{{ post.data.featured_image }}" alt="{{ post.data.image_caption }}" class="block rounded-t-lg">
          </figure>
        </a>
        {% endif %}

        <div class="p-6">
          <h2 class="text-2xl mb-6">
            <a class="block text-purple-900 hover:text-red-500 no-underline leading-none" href="{{ post.url }}">{{ post.data.title }}</a>
          </h2>
          <div class="text-sm text-gray-600 md:flex mb-4">
            <p class="author">By {{ site.author.name }}</p>
            <p class="hidden md:block px-2">â€”</p>
            <time datetime="{{ post.date }}">{{ post.date | dateDisplay }}</time>
          </div>
        </div>

      </article>
      {% endfor %}

    </div>
  </section>
</main>
